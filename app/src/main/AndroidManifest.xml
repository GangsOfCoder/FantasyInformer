<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gangsofcoder.fantasyinformer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.FantasyInformerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".common.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.categories.CategoryListActivity"
            android:label="@string/title_activity_category_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.events.EventListActivity"
            android:label="@string/title_activity_event_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.eventdetails.EventDetailsActivity"
            android:label="@string/title_activity_event_details"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.test.testActivity"></activity>
    </application>

</manifest>